---
interface Props {
  label: string;
  placeholder: string;
  id: any;
  type: any;
  name: string;
  required?: boolean;
}

const { label, id, placeholder, type, name, required } = Astro.props;
---

<div class="flex flex-col">
  <label class="">{label}</label>
  <input
    class="rounded-md p-2"
    type={type}
    placeholder={placeholder}
    id={id}
    name={name}
    required={required}
  />
</div>
